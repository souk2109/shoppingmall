<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	 
	<security:http>
		<!-- <security:access-denied-handler ref=""/> -->
		<security:intercept-url pattern="/" access="permitAll"/>
		<!-- <security:intercept-url pattern="/chat/*" access="isAuthenticated()"/>  -->
		<security:form-login login-page="/common/loginPage" login-processing-url="/common/doLogin" 
		username-parameter="id" password-parameter="pwd"/>
		<security:logout logout-success-url="/common/loginPage" logout-url="/common/doLogout" invalidate-session="true"/>	
		<security:csrf disabled="true"/>
	</security:http>
	
	<bean id="encoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder"/>
	<!-- TODO 아래 클래스 만들어줘야함 -->
	<bean id="userService" class="org.shoppingmall.security.CustomUserDetailsService"></bean>
	<security:authentication-manager>
		<security:authentication-provider user-service-ref="userService">
			<security:password-encoder ref="encoder"/>
		</security:authentication-provider>
	</security:authentication-manager>

</beans>
