<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.shoppingmall.mapper.SellerRequestMapper">
	<insert id="insertSellerRequest">
		insert into tbl_seller_request(name, id, accountNum,email) values(#{name}, #{id}, #{accountNum},#{email})
	</insert>
	<select id="getSellerRequestList" resultType="org.shoppingmall.domain.SellerRequestVO">
		select * from tbl_seller_request
	</select>
	
	<select id="getValidateById" resultType="int">
		select count(*) from tbl_seller_request where id =#{id}
	</select>
	<select id="getSellerRequestVO" resultType="org.shoppingmall.domain.SellerRequestVO">
		select * from tbl_seller_request where id = #{id}
	</select>
</mapper>